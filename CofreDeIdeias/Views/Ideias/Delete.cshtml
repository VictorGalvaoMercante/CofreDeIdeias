@model CofreDeIdeias.Models.Ideia

@{
    ViewData["Title"] = "Excluir Ideia";
}

<style>
    .delete-container {
        max-width: 800px;
        margin: 4rem auto;
        background-color: #2b2b36;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
        color: #f8f9fa;
    }

    .delete-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        color: #ff4d4f;
        margin-bottom: 1.5rem;
    }

    .delete-warning {
        text-align: center;
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #ffd166;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid #444;
    }

    .detail-label {
        font-weight: 600;
        color: #b0b0b0;
    }

    .detail-value {
        font-weight: 400;
        text-align: right;
    }

    .delete-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2.5rem;
    }

    .btn-delete {
        padding: 0.6rem 1.5rem;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-cancel {
        padding: 0.6rem 1.5rem;
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-container">
    <h2 class="delete-title">Tem certeza que deseja excluir?</h2>
    <p class="delete-warning">Essa ação não poderá ser desfeita.</p>

    <div class="detail-item">
        <div class="detail-label">Título:</div>
        <div class="detail-value">@Model.Titulo</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Descrição:</div>
        <div class="detail-value">@Model.Descricao</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Categoria:</div>
        <div class="detail-value">@Model.Categoria</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Prioridade:</div>
        <div class="detail-value">@Model.Prioridade</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Confidencial:</div>
        <div class="detail-value">@Model.Confidencial</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Favorita:</div>
        <div class="detail-value">@Model.Favorita</div>
    </div>
    <div class="detail-item">
        <div class="detail-label">Data de Criação:</div>
        <div class="detail-value">@Model.DataCriacao.ToString("dd/MM/yyyy")</div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="delete-actions">
            <input type="submit" value="Excluir" class="btn-delete" />
            <a asp-action="Index" class="btn-cancel">Cancelar</a>
        </div>
    </form>
</div>
