@model CofreDeIdeias.Models.Ideia

@{
    ViewData["Title"] = "Detalhes da Ideia";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 4rem auto;
        background-color: #2c2c3e;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
        color: #f8f9fa;
    }

    .details-title {
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 2rem;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #444;
        padding: 0.8rem 0;
    }

    .detail-label {
        font-weight: 600;
        color: #b0b0b0;
    }

    .detail-value {
        font-weight: 400;
        text-align: right;
    }

    .details-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-link-custom {
        text-decoration: none;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        background-color: #007bff;
        color: white;
        transition: background 0.3s ease;
    }

        .btn-link-custom:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>

<div class="details-container">
    <h2 class="details-title">Detalhes da Ideia</h2>

    <div class="detail-item">
        <div class="detail-label">Título:</div>
        <div class="detail-value">@Model.Titulo</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Descrição:</div>
        <div class="detail-value">@Model.Descricao</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Categoria:</div>
        <div class="detail-value">@Model.Categoria</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Prioridade:</div>
        <div class="detail-value">@Model.Prioridade</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Confidencial:</div>
        <div class="detail-value">@Model.Confidencial</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Favorita:</div>
        <div class="detail-value">@Model.Favorita</div>
    </div>

    <div class="detail-item">
        <div class="detail-label">Data de Criação:</div>
        <div class="detail-value">@Model.DataCriacao.ToString("dd/MM/yyyy")</div>
    </div>

    <div class="details-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-link-custom">Editar</a>
        <a asp-action="Index" class="btn-link-custom btn-back">Voltar</a>
    </div>
</div>
